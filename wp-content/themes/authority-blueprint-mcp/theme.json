{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        { "slug": "primary", "color": "#388e3c", "name": "Primary Green" },
        { "slug": "secondary", "color": "#795548", "name": "Secondary Brown" },
        { "slug": "background", "color": "#f5fbe7", "name": "Background Light" },
        { "slug": "contrast", "color": "#222", "name": "Contrast" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Inter, Arial, sans-serif",
          "slug": "inter",
          "name": "Inter"
        }
      ],
      "fontSizes": [
        { "slug": "base", "size": "1rem", "name": "Base" },
        { "slug": "lg", "size": "1.25rem", "name": "Large" },
        { "slug": "sm", "size": "0.95rem", "name": "Small" }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 7,
        "mediumStep": 1.5
      },
      "blockGap": "1.5rem"
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--base)"
    }
  }
} 